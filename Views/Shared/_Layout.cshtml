            <a class="uk-navbar-brand uk-hidden-small" href="/Home/">Home</a>
            <ul class="uk-navbar-nav uk-hidden-small">
                
                <li data-uk-dropdown="{mode:'click'}">

                    <!-- This is the nav item toggling the dropdown -->
                    <a href="/Home/Services">Services</a>

                    <!-- This is the dropdown -->
                    <div class="uk-dropdown uk-dropdown-small">
                        <ul class="uk-nav uk-nav-dropdown">
                            <li><a href="/Home/Programming">Programming</a></li>
                            <li><a href="/Home/SharePoint">SharePoint</a></li>
                            @*<li><a href="/Home/Architecture">Architecture</a></li>
